{
  "version": 2,
  "rewrites": [
    { "source": "/api", "destination": "/api" },
    { "source": "/api/photos/(.*)", "destination": "/api/photos" },
    { "source": "/api/categories/(.*)", "destination": "/api/categories" }
  ],
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["api/**"]
      }
    }
  ]
}
